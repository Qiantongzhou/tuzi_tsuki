

@if (!User.Identity.IsAuthenticated)
{
    <a class="btn btn-outline-success my-2 my-sm-0" asp-controller="Account" asp-action="Login">
        <i class="bi bi-box-arrow-in-right"></i> 登录
    </a>
    <span style="padding: 5px;"></span>

   @*  <a class="btn btn-outline-primary my-2 my-sm-0" asp-controller="Account" asp-action="Register">
        <i class="bi bi-person-plus"></i> Register
    </a> *@
}
else
{

    @*User profile section*@
    <div class="dropdown">
        <button class="btn btn-outline-success dropdown-toggle" type="button" id="profile-btn" data-toggle="dropdown"
                aria-expanded="false">
            <i class="bi bi-person-badge"></i> 你好 @User.Identity.Name!
        </button>
        <ul class="dropdown-menu" aria-labelledby="profile-btn">
            <li>
                <a class="dropdown-item" asp-controller="Orders" asp-action="Index">
                    <i class="bi bi-list"></i> 用户
                </a>
            </li>

            @if (User.IsInRole("Administrator"))
            {
                <li>
                    <a class="dropdown-item" asp-controller="Account" asp-action="UpdateSongs">
                        <i class="bi bi-people"></i> 管理歌单
                    </a>
                </li>
                <li>
                    <a class="dropdown-item" asp-controller="Account" asp-action="AddSong">
                        <i class="bi bi-people"></i> 添加新歌
                    </a>
                </li>
                <li>
                    <a class="dropdown-item" asp-controller="Account" asp-action="AddSong2">
                        <i class="bi bi-people"></i> 添加歌单
                    </a>
                </li>
            }
        </ul>
    </div>
    <span style="padding: 5px;"></span>
    <form asp-controller="Account" asp-action="Logout">
        <button class="btn btn-outline-danger my-2 my-sm-0">
            <i class="bi bi-box-arrow-in-right"></i> 退出
        </button>
    </form>
}

